<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Inicio">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAromas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:drawableBottom="@drawable/aromas1"
                android:text="@string/boton_inicio_aromas"
                android:textColor="@color/Verde3"
                android:textSize="@dimen/tamano_letra_botones_inicio"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCalculadora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:drawableBottom="@drawable/calculadora"
                android:text="@string/boton_inicio_calculadora"
                android:textColor="@color/Verde3"
                android:textSize="@dimen/tamano_letra_botones_inicio"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnMisLiquidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:drawableBottom="@drawable/almacenamiento"
                android:text="@string/boton_inicio_liquidos_almacenados"
                android:textColor="@color/Verde3"
                android:textSize="@dimen/tamano_letra_botones_inicio"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRecetas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:drawableBottom="@drawable/recetas"
                android:text="@string/boton_inicio_recetas"
                android:textColor="@color/Verde3"
                android:textSize="@dimen/tamano_letra_botones_inicio"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnGastos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:drawableBottom="@drawable/gastos"
                android:text="@string/boton_inicio_gastos"
                android:textColor="@color/Verde3"
                android:textSize="@dimen/tamano_letra_botones_inicio"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>