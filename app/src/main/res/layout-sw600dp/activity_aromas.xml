<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AromasActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/txtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="123dp"
        android:text="@string/Aromas_Id"
        android:textSize="@dimen/Literales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtIdValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:text="@string/Aromas_HintId"
        android:textSize="@dimen/Literales"
        app:layout_constraintBottom_toBottomOf="@+id/txtId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtId" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="67dp"
        android:text="@string/Aromas_Nombre"
        android:textSize="@dimen/Literales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtId" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="@string/Aromas_HintNombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIdValor" />

    <TextView
        android:id="@+id/txtMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="71dp"
        android:layout_marginStart="48dp"
        android:text="@string/Aromas_Marca"
        android:textSize="@dimen/Literales"
        app:layout_constraintBottom_toTopOf="@+id/txtTipo"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:hint="@string/Aromas_HintMarca"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNombre" />

    <TextView
        android:id="@+id/txtTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:layout_marginStart="48dp"
        android:text="@string/Aromas_Tipo"
        android:textSize="@dimen/Literales"
        app:layout_constraintBottom_toTopOf="@+id/txtPorcentaje"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="57dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMarca" />

    <TextView
        android:id="@+id/txtPorcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="@string/Aromas_Porcentaje"
        android:textSize="@dimen/Literales"
        app:layout_constraintBaseline_toBaselineOf="@+id/etPorcentaje"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/etPorcentaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:ems="10"
        android:gravity="end"
        android:text="@string/Aromas_Valor_0"
        android:textSize="@dimen/Literales"
        app:layout_constraintBottom_toTopOf="@+id/etMinMaceracion"
        app:layout_constraintEnd_toEndOf="@+id/etMinMaceracion"
        app:layout_constraintStart_toStartOf="@+id/etMinMaceracion" />

    <SeekBar
        android:id="@+id/sbPorcentaje"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="@dimen/SeekBar"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="@+id/sbMaxMaceracion"
        app:layout_constraintStart_toStartOf="@+id/sbMaxMaceracion"
        app:layout_constraintTop_toTopOf="@+id/etPorcentaje" />

    <TextView
        android:id="@+id/txtMinMaceracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="334dp"
        android:layout_marginStart="48dp"
        android:text="@string/Aromas_MinMaceracion"
        android:textSize="@dimen/Literales"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/etMinMaceracion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="end"
        android:hint="@string/Aromas_HintMinMaceracion"
        android:text="@string/Aromas_Valor_0"
        android:textSize="@dimen/Literales"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtMinMaceracion"
        app:layout_constraintEnd_toEndOf="@+id/etMaxMaceracion"
        app:layout_constraintStart_toStartOf="@+id/etMaxMaceracion" />

    <SeekBar
        android:id="@+id/sbMinMaceracion"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="@dimen/SeekBar"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:max="8"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etMaxMaceracion" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Aromas_Semanas"
        android:textSize="@dimen/Literales"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/txtMinMaceracion" />

    <TextView
        android:id="@+id/txtMaxMaceracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="66dp"
        android:text="@string/Aromas_MaxMaceracion"
        android:textSize="@dimen/Literales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="21dp"
        android:text="@string/Aromas_Semanas"
        android:textSize="@dimen/Literales"
        app:layout_constraintEnd_toEndOf="@+id/txtMinMaceracion"
        app:layout_constraintStart_toStartOf="@+id/btnAnadir"
        app:layout_constraintTop_toTopOf="@+id/txtMaxMaceracion" />

    <TextView
        android:id="@+id/etMaxMaceracion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="82dp"
        android:layout_marginStart="83dp"
        android:ems="10"
        android:gravity="end"
        android:hint="@string/Aromas_HintMinMaceracion"
        android:text="@string/Aromas_Valor_0"
        android:textSize="@dimen/Literales"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtMaxMaceracion"
        app:layout_constraintEnd_toStartOf="@+id/btnEliminar"
        app:layout_constraintStart_toStartOf="@+id/btnModificar" />

    <SeekBar
        android:id="@+id/sbMaxMaceracion"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="@dimen/SeekBar"
        android:layout_height="wrap_content"
        android:max="8"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="@+id/sbMinMaceracion"
        app:layout_constraintStart_toStartOf="@+id/sbMinMaceracion"
        app:layout_constraintTop_toTopOf="@+id/etMinMaceracion" />

    <Button
        android:id="@+id/btnAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="48dp"
        android:text="@string/Aromas_btnAnadir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="237dp"
        android:text="@string/Aromas_btnModificar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="32dp"
        android:text="@string/Aromas_btnBorrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>